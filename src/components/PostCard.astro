---
const { post } = Astro.props;
import { formatDate } from "../utils";
---

<article class="group mb-10">
  <a href={`/post/${post.slug}/`} class="block p-1 rounded-lg">
    <div
      class="flex flex-col sm:flex-row sm:items-baseline gap-2 sm:gap-4 mb-2"
    >
      <time
        datetime={post.data.pubDate.toISOString()}
        class="text-sm text-slate-400 font-mono shrink-0"
      >
        {formatDate(post.data.pubDate)}
      </time>
      <h2
        class="text-xl font-semibold text-slate-800 dark:text-slate-100 group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors"
      >
        {post.data.title}
      </h2>
    </div>

    <p
      class="text-slate-600 dark:text-slate-400 leading-relaxed sm:ml-[8.5rem]"
    >
      {post.data.description}
    </p>
  </a>
</article>
